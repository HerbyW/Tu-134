  <PropertyList>
    
    <path>throttlebox134.ac</path>

    <!--Lights -->

  <animation>
    <type>material</type>    
      
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.15 </red>
      <green> 0.15 </green>
      <blue>  0.15 </blue>
    </emission>
  </animation>
  
  
  
  <animation>
    <type>rotate</type>
    <object-name>T1</object-name>    
    <expression>
      <product>
	<property>controls/engines/engine[0]/throttle-lever</property>
	<property>controls/engines/engine[0]/ignition</property>
	<value>60</value>
      </product>
    </expression>
    <offset-deg>0</offset-deg>
    <factor>60</factor>
    <center>
      <x-m> 0.009387 </x-m>
      <y-m> -0.254 </y-m>
      <z-m> -0.367 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y>-1 </y>
      <z> 0 </z>
    </axis>
  </animation>

